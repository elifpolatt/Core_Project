@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Yeteneklerim</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">BAŞLIK</th>
                            <th scope="col" class="sort" data-sort="status">ORAN</th>
                            <th scope="col" class="sort" data-sort="status" >SİL</th>
                            <th scope="col" class="sort" data-sort="completion">DÜZENLE</th>
                                
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-info" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                    <td><a href="/Skill/DeleteSkill/@item.Id" class="btn btn-primary">Sil</a></td>
                                <td><a href="/Skill/UpdateSkill/@item.Id" class="btn btn-secondary">Düzenle</a></td>
                            </tr>

                            
                        }
                           
                        </tbody>
                        
                    </table>
                </div>
                
            </div>
            <a href="/Skill/AddSkill/" class="btn btn-success">Yeni Yetenek Ekle</a>
        </div>
    </div>
   
</div>

